<div class="row">
  <div class="col-sm-4">
    <div id="ibox_1" class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>MakeSchool</h5>
        <div class="ibox-tools">
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
        </div>
      </div>
      <div class="ibox-content">
        <% data1.forEach(function(item) { %>
          <div class="panel panel-primary" style="border-color: <%= color1 %>">
            <div class="panel-heading" style="background-color: <%= color1 %>; border-color: <%= color1 %>;">
              <strong><%= item.user.name %></strong> &nbsp;&nbsp;&nbsp;  <%= moment(item.created_at).format('Do MMMM, YYYY') %>
            </div>
            <div class="panel-body">
              <%= item.text %>
            </div>
            <div class="panel-footer">
              <a href="<%= 'https://twitter.com/' + item.user.screen_name + '/status/' + item.id_str %>" target="_blank">View More on Twitter &nbsp;&nbsp; <i class="fa fa-arrow-right"></i></a>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
